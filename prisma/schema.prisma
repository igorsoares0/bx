// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Bundle {
  id            Int      @id @default(autoincrement())
  name          String
  buyType       String   // "product" | "collection"
  buyReference  String   // Shopify GID do produto ou coleção
  minQuantity   Int
  getProductId  String   // Shopify GID do produto reward
  discountType  String   // "percentage" | "fixed"
  discountValue Int
  maxReward     Int
  active        Boolean  @default(true)
  shopId        String
  discountId    String?  // GID do automatic discount criado no Shopify
  designConfig  String?  // JSON com configurações de design
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TieredBundle {
  id            Int      @id @default(autoincrement())
  name          String
  productId        String   // Shopify GID do produto (buy = get = mesmo produto)
  tiersConfig      String   @default("[{\"buyQty\":1,\"freeQty\":1,\"discountPct\":100},{\"buyQty\":2,\"freeQty\":3,\"discountPct\":100},{\"buyQty\":3,\"freeQty\":6,\"discountPct\":100}]") // JSON array: [{ buyQty, freeQty, discountPct }, ...]
  active        Boolean  @default(true)
  shopId        String
  discountId    String?  // GID do automatic discount criado no Shopify
  designConfig  String?  // JSON com configurações de design
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model VolumeBundle {
  id            Int      @id @default(autoincrement())
  name          String
  productId     String
  volumeTiers   String   @default("[{\"label\":\"Single\",\"qty\":1,\"discountPct\":0,\"popular\":false},{\"label\":\"Duo\",\"qty\":2,\"discountPct\":15,\"popular\":true},{\"label\":\"Trio\",\"qty\":3,\"discountPct\":25,\"popular\":false}]")
  active        Boolean  @default(true)
  shopId        String
  discountId    String?
  designConfig  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ComplementBundle {
  id               Int      @id @default(autoincrement())
  name             String
  triggerType      String   // "product" | "collection" | "all"
  triggerReference String?  // Shopify GID do produto ou coleção (null se "all")
  complements      String   // JSON: [{ productId, discountPct }]
  active           Boolean  @default(true)
  shopId           String
  discountId       String?
  designConfig     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
